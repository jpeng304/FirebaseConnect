<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpeng.teacherapp.UpdateStudent">

    <TextView
        android:id="@+id/txtStdName_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="41dp"
        android:textColor="#000000"
        android:text="Student Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etStudentName_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtStdName_update"
        android:layout_alignBottom="@+id/txtStdName_update"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtStdID_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etStudentID_update"
        android:layout_alignBottom="@+id/etStudentID_update"
        android:layout_alignLeft="@+id/txtStdName_update"
        android:layout_alignStart="@+id/txtStdName_update"
        android:text="Student ID:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etStudentID_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etStudentName_update"
        android:layout_alignRight="@+id/etStudentName_update"
        android:layout_below="@+id/etStudentName_update"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Student ID" />

    <TextView
        android:id="@+id/txtCourse1_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtStdID_update"
        android:layout_alignStart="@+id/txtStdID_update"
        android:layout_below="@+id/etStudentID_update"
        android:layout_marginTop="43dp"
        android:text="Course 1:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etCourse1_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCourse1_update"
        android:layout_alignBottom="@+id/txtCourse1_update"
        android:layout_alignLeft="@+id/etStudentID_update"
        android:layout_alignStart="@+id/etStudentID_update"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Course 1 Name" />

    <TextView
        android:id="@+id/txtCourse2_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCourse1_update"
        android:layout_alignStart="@+id/txtCourse1_update"
        android:layout_below="@+id/etCourse1_update"
        android:layout_marginTop="42dp"
        android:textColor="#000000"
        android:text="Course 2:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etCourse2_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCourse2_update"
        android:layout_alignBottom="@+id/txtCourse2_update"
        android:layout_alignLeft="@+id/etCourse1_update"
        android:layout_alignStart="@+id/etCourse1_update"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Course 2 Name" />

    <Button
        android:id="@+id/btnUpdateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCourse2_update"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtCourse2_update"
        android:layout_marginBottom="69dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Update " />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUpdateInfo"
        android:layout_alignBottom="@+id/btnUpdateInfo"
        android:layout_alignEnd="@+id/etCourse2_update"
        android:layout_alignRight="@+id/etCourse2_update"
        android:text="Remove" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnRemove"
        android:layout_alignBottom="@+id/btnRemove"
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

</RelativeLayout>
